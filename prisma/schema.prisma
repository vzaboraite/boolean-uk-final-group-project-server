// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String     @db.VarChar(255)
  profile   Profile?
  projects  Project[]
  donations Donation[]
}

model Profile {
  id      Int    @id @default(autoincrement())
  email   String @db.VarChar(255)
  country String @db.VarChar(255)
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}

model Project {
  id          Int                  @id @default(autoincrement())
  title       String               @db.VarChar(255)
  description String               @db.VarChar(255)
  goal        Int
  user        User                 @relation(fields: [userId], references: [id])
  userId      Int
  donations   Donation[]
  categories  CategoryOnProjects[]
}

model Donation {
  id        Int     @id @default(autoincrement())
  amount    Float
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
}

model Category {
  id       Int                  @id @default(autoincrement())
  name     String               @db.VarChar(255)
  projects CategoryOnProjects[]
}

model CategoryOnProjects {
  categoryId Int
  category   Category @relation(fields: [projectId], references: [id])
  projectId  Int
  project    Project  @relation(fields: [categoryId], references: [id])

  @@id([categoryId, projectId])
}

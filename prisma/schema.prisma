// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model user {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(255)
  profile  profile?
  project  project[]
  donation donation[]
}

model profile {
  id      Int    @id @default(autoincrement())
  email   String @db.VarChar(255)
  country String @db.VarChar(255)
  user    user   @relation(fields: [userId], references: [id])
  userId  Int
}

model project {
  id          Int                  @id @default(autoincrement())
  title       String               @db.VarChar(255)
  description String               @db.VarChar(255)
  goal        Int
  user        user                 @relation(fields: [userId], references: [id])
  userId      Int
  donation    donation[]
  category    categoryOnProjects[]
}

model donation {
  id        Int     @id @default(autoincrement())
  amount    Float
  user      user    @relation(fields: [userId], references: [id])
  userId    Int
  project   project @relation(fields: [projectId], references: [id])
  projectId Int
}

model category {
  id      Int                  @id @default(autoincrement())
  name    String               @db.VarChar(255)
  project categoryOnProjects[]
}

model categoryOnProjects {
  categoryId Int
  category   category @relation(fields: [projectId], references: [id])
  projectId  Int
  project    project  @relation(fields: [categoryId], references: [id])

  @@id([categoryId, projectId])
}
